{% extends 'base.jinja' %}

{% block content %}
<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2 text-center">
            <h1 class="display-4 mt-5">Hello! Welcome to the site!</h1>
            <p class="lead mt-3">Connect with your friends in a SECURE environment.</p>
            <hr class="my-4">
            <p class="mb-4">Create a new account or log in to start chatting.</p>
            <div class="d-flex justify-content-center">
                <p><a href={{ url_for('signup') }} class="btn btn-primary mr-2">Sign Up</a></p>
                <p><a href={{ url_for('login') }} class="btn btn-secondary">Login</a></p>
            </div>
        </div>
    </div>
</div>
{% endblock %}
